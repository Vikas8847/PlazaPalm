<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  

    

                 
                        
                                                                  
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:tag="layout/fragment_report_choose_option_items_0"                                                    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tool="http://schemas.android.com/tools">

        <RadioGroup
            android:id="@+id/rgFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_drawable"
                android:tag="binding_1"            
                android:fontFamily="@font/inter_medium"
                android:layoutDirection="rtl"
                android:layout_marginTop="@dimen/_3sdp"
                android:paddingVertical="@dimen/_3sdp"
                                             
                android:singleLine="true"
                android:maxLines="4"
                android:textColor="@color/light_black"
                android:textSize="14sp"
                tool:text="False,misleading or harmful,Information" />

            <View
                android:id="@+id/viewFavourite"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/light_dark_view_color"
                app:layout_constraintTop_toBottomOf="@+id/tvFavourite" />

        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/rgFirst">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:button="@drawable/checkbox_drawable"
                android:tag="binding_2"            
                android:fontFamily="@font/inter_medium"
                android:layoutDirection="rtl"
                android:padding="@dimen/_2sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                                             
                android:textColor="@color/light_black"
                android:textSize="16sp"
                tool:text="False, misleading or harmful,
Information" />

            <View
                android:id="@+id/viewFavouriteSecond"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/white_gray"
                app:layout_constraintTop_toBottomOf="@+id/tvFavourite" />

        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
         