                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etVEditProDescription"
                            android:layout_width="match_parent"
                            app:layout_constraintTop_toBottomOf="@id/tvVEditProDescription"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="top"
                            android:background="@drawable/forgot_email_bg"
                            android:textColorHint="@color/gray"
                            android:textColor="@color/light_black"
                            android:textCursorDrawable="@drawable/color_cursor_black"
                            android:text="@={vm.description1}"
                            android:textSize="14sp"
                            android:hint="Description 1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvVEditProDescriptionSecond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/inter_medium"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text="@string/description2"
                            android:textColor="@color/forgot_pass"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@id/tvVEditProLastName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etVEditProDescription" />

<!--
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginStart="@dimen/_10sdp"
