                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvVEditProExpiryDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/inter_medium"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text="Expiration date"
                            android:textColor="@color/forgot_pass"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@id/tvVEditProLastName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etVEditProDescriptionThird" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/etVEditProExpiryDate"
