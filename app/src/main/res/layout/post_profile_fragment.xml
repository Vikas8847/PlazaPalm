                            android:textColor="@color/tool_bar_black_color"
                            android:textColorHint="@color/gray"
                            android:textCursorDrawable="@drawable/color_cursor_black"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@id/etVEditProLastName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvVEditProUserName" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvVEditProTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/inter_medium"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text="Profile Title"
                            android:textColor="@color/forgot_pass"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@id/tvVEditProLastName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etVEditProUserName" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etVEditProfileTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/forgot_email_bg"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Profile Title"
                            android:inputType="text"
                            android:maxLength="30"
                            android:paddingVertical="@dimen/_8sdp"
                            android:text="@={vm.profileTitle}"
                            android:textColor="@color/tool_bar_black_color"
                            android:textColorHint="@color/gray"
                            android:textCursorDrawable="@drawable/color_cursor_black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvVEditProTitle" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvVEditProChooseCategory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/inter_medium"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text="Choose Category"
                            android:textColor="@color/forgot_pass"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@id/tvVEditProLastName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etVEditProfileTitle" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/etVEditProChooseCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/forgot_email_bg"
                            android:fontFamily="@font/inter_medium"
                            android:hint="@string/choose_categeory"
                            android:text="@={vm.categeory}"
                            android:inputType="text"
                            android:onClick="@{vm::onClicks}"
                            android:editable="false"
                            android:maxLength="30"
                            android:paddingVertical="@dimen/_8sdp"
                            android:textColor="@color/tool_bar_black_color"
                            android:textColorHint="@color/gray"
                            android:textCursorDrawable="@drawable/color_cursor_black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvVEditProChooseCategory" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvVEditProAddAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/inter_medium"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text="Add Address"
                            android:textColor="@color/forgot_pass"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@id/tvVEditProLastName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etVEditProChooseCategory" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etVEditProAddAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/forgot_email_bg"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Add Address"
                            android:inputType="text"
                            android:maxLength="30"
                            android:paddingVertical="@dimen/_8sdp"
                            android:text="@={vm.address}"
                            android:textColor="@color/tool_bar_black_color"
                            android:textColorHint="@color/gray"
                            android:textCursorDrawable="@drawable/color_cursor_black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvVEditProAddAddress" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvVEditProTags"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/inter_medium"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text="Add Location"
                            android:textColor="@color/forgot_pass"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@id/tvVEditProLastName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etVEditProAddAddress" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/etVEditProTags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/forgot_email_bg"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Location"
                            android:text="@={vm.location}"
                            android:inputType="text"
                            android:onClick="@{vm::onClicks}"
                            android:paddingVertical="@dimen/_8sdp"
                            android:textColor="@color/tool_bar_black_color"
                            android:textColorHint="@color/gray"
                            android:textCursorDrawable="@drawable/color_cursor_black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvVEditProTags" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvVEditProDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/inter_medium"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text="Description"
                            android:textColor="@color/forgot_pass"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@id/tvVEditProLastName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etVEditProTags" />


