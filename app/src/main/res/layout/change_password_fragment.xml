<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.example.plazapalm.views.changepass.ChangePassVM" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivChangePassword"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="start"
                    android:onClick="@{vm::onClicks}"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_back_arrow_button"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvChangePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/inter_medium"
                    android:paddingVertical="@dimen/_1sdp"
                    android:text="Change Password"
                    android:textColor="@color/tool_bar_black_color"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clChangePassMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{vm::onClicks}">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSettingsChangePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Current Password"
                    android:textColor="@color/tool_bar_black_color"
                    app:layout_constraintStart_toStartOf="@+id/clCurrentPass"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCurrentPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@id/tvSettingsChangePassword">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etChangePass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/forgot_email_bg"
                        android:fontFamily="@font/inter_regular"
                        android:hint="Current Password"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingVertical="@dimen/_8sdp"
                        android:singleLine="true"
                        android:text="@={vm.currentPassword}"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/color_cursor_black"
                        android:textSize="14sp"
                        android:theme="@style/MyEditText"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvChangeNewPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text="New Password"
                    android:textColor="@color/tool_bar_black_color"
                    app:layout_constraintStart_toStartOf="@id/clNewPass"
                    app:layout_constraintTop_toBottomOf="@id/clCurrentPass" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@id/tvChangeNewPass">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etNewPass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/forgot_email_bg"
                        android:fontFamily="@font/inter_regular"
                        android:hint="New Password"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingVertical="@dimen/_8sdp"
                        android:singleLine="true"
                        android:text="@={vm.newPassword}"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:theme="@style/MyEditText"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvConfirmPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Confirm New Password"
                    android:textColor="@color/tool_bar_black_color"
                    app:layout_constraintStart_toStartOf="@id/clConfirmPass"
                    app:layout_constraintTop_toBottomOf="@id/clNewPass" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clConfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@id/tvConfirmPass">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etConfirmPass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/forgot_email_bg"
                        android:fontFamily="@font/inter_regular"
                        android:hint="Confirm New Password"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingVertical="@dimen/_8sdp"
                        android:singleLine="true"
                        android:text="@={vm.confirmPassword}"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:theme="@style/MyEditText"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/ic_bluemix_button_bg"
                    android:gravity="center"
                    android:onClick="@{vm::onClicks}"
                    android:paddingBottom="@dimen/_1sdp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/clConfirmPass">

                </androidx.appcompat.widget.AppCompatButton>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>